<%  layout("main") -%>
<% block("header", "Регистрация нового пользователя"); %>
<section id="loginForm">
    <form action="/register" method="post" onsubmit="return checkPassword()">
        <fieldset>
            <ol>
                <li class="username">
                    <label for="login">Логгин:</label>
                    <input type="text" name="login">
                </li>
                <li class="password">
                    <label for="password">Пароль:</label>
                    <input type="text" name="password" id="password">
                </li>
                <li class="password-confirm">
                    <label for="password-confirm">Подтвердите пароль:</label>
                    <input type="text" name="password-confirm" id="password-confirm">
                </li>
            </ol>
            <input type="submit" value="Зарегистрироваться">
        </fieldset>
    </form>
    <script>
        function checkPassword(){
            var p1 = document.getElementById("password");
            var p2 = document.getElementById("password-confirm");
            if(p1.value != p2.value){
                alert("Wrong password");
                return false;
            }else{
                document.forms[0].submit();
                return true;
            }
        }
    </script>
</section>
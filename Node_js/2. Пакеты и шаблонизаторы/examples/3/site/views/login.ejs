<%  layout("main") -%>
<% block("header", "Вход для зарегестрированных пользователей"); %>
<section id="loginForm">
    <form action="/login" method="post">
        <fieldset>
            <ol>
                <li class="username">
                    <label for="login">Логгин:</label>
                    <input type="text" name="login">
                </li>
                <li class="password">
                    <label for="password">Пароль:</label>
                    <input type="password" name="password">
                </li>
            </ol>
            <input type="submit" value="Вход">
        </fieldset>
    </form>
    <a href="/register"> Хотите зарегистрироваться</a>
</section>
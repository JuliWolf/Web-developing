{{# if success}}
    <section class="success">
        <h2>Successful Validation!</h2>
    </section>
{{else}}
    {{# if errors}}
        <section class="errors">
            <ul>
                {{# each errorr}}
                    <li>{{ this.msg }} </li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
{{/if}}
<form action="/submit" method="post">

        <label for="email">Email</label>
        <input type="text" id="email" name="email">
    </div>
    <div class="input">
        <label for="password">Password</label>
        <input type="password" id="password" name="password">
    </div>
    <div class="input">
        <label for="password2">Confirm Password</label>
